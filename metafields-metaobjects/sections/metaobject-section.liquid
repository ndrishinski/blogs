<div style="width: 100%; height: 400px; display: flex; flex-direction: column; justify-content: center; align-items: center;">

  <p>Cleaning Routine: {{ section.settings.name }}</p>
  {{ section.settings.image | image_url: width: 200 | image_tag }}
  <p>{{ section.settings.duration }} min</p>
  
  
  
{% comment %}   
  <p>Cleaning Routine: {{ shop.metaobjects.cleaning_routing.T-Shirt.name }}</p>
  {{ shop.metaobjects.cleaning_routing.T-Shirt.image | image_url: width: 200 | image_tag }}
  <p>{{ shop.metaobjects.cleaning_routing.T-Shirt.duration }} min</p> {% endcomment %}

</div>

{% schema %}
  {
    "name": "Metaobject Section",
    "settings": [
      {
        "type": "text",
        "label": "Name",
        "id": "name"
      },
      {
        "type": "image_picker",
        "label": "Image",
        "id": "image"
      },
      {
        "type": "text",
        "label": "Duration",
        "id": "duration"
      }
    ],
    "presets": [
      {
        "name": "Metaobject Section"
      }
    ]
  }
{% endschema %}