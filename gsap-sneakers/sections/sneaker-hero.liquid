      <img src="{{ section.settings.image2 | image_url: width: 1000 }}" class="hero-img img2" alt="Image 2">
      <img src="{{ section.settings.image3 | image_url: width: 1000 }}" class="hero-img img3" alt="Image 3">
    </div>
  </div>
</div>

